			<group category="gin">
				<title>Abbey No.1</title>
				<ingredients-list>
					<ingredients>1 1/2 oz. gin</ingredients>
					<ingredients>3/4 oz. Lillet blanc</ingredients>
					<ingredients>3/4 oz. orange juice</ingredients>
					<ingredients>Maraschino cherry or orange peel</ingredients>
				</ingredients-list>
				<directions>
					<mixing_directions>Mix all ingredients, except cherry, with cracked ice.</mixing_directions>
					<mixing_directions>Strain into a chilled cocktail glass.</mixing_directions>
					<mixing_directions>Garnish with cherry or orange peel.</mixing_directions>
				</directions>
				<glass>
					<serving_glass>Cocktail Glass</serving_glass>
					<images>images/cocktail_glass.jpg</images>
				</glass>
			</group>
