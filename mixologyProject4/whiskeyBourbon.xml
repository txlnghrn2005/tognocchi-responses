<mixology>	
	<drinks>
		<whiskeyBourbon>
			<group category="whiskey">
				<title>Amalfi Cocktail</title>
				<ingredients-list>
					<ingredients>1 1/2 oz bourbon</ingredients>
					<ingredients>1 oz. lemon juice</ingredients>
					<ingredients>1/2 oz Galliano</ingredients>
					<ingredients>1 tsp. orgeat syrup</ingredients>
					<ingredients>Club soda</ingredients>
				</ingredients-list>
				<directions>
					<mixing_directions>Mix all ingredients, except club soda, with cracked ice in a shaker or blender.</mixing_directions>
					<mixing_directions>Pour into a chilled Collins glass.</mixing_directions>
					<mixing_directions>Top off with club soda.</mixing_directions>
				</directions><glass>
				<images>images/collins_glass.jpg</images></glass>
			</group>
			<group category="whiskey">
				<title>Bank Holiday</title>
				<ingredients-list>
					<ingredients>1/2 bourbon</ingredients>
					<ingredients>1/2 oz. Galliano</ingredients>
					<ingredients>1/2 oz. créme de cacao</ingredients>
					<ingredients>1/2 oz. brandy</ingredients>
					<ingredients>2 oz. sweet cream</ingredients>
				</ingredients-list>
				<directions>
					<mixing_directions>Mix all ingredients with cracked ice in a shaker or blender.</mixing_directions>
					<mixing_directions>Strain into a chilled cocktail glass.</mixing_directions>
				</directions><glass>
				<serving_glass>Cocktail Glass</serving_glass>
				<images>images/cocktail_glass.jpg</images></glass>
			</group>
			<group category="whiskey">
				<title>Champagne Julep</title>
				<ingredients-list>
					<ingredients>3 oz. bourbon</ingredients>
					<ingredients>1 tsp. sugar syrup</ingredients>
					<ingredients>Brut Champagne</ingredients>
					<ingredients>Several sprigs of mint</ingredients>
				</ingredients-list>
				<directions>
					<mixing_directions>Remove a half-dozen mint leaves from sprig.</mixing_directions>
					<mixing_directions>Put them in a tall Collins glass with syrup and muddle.</mixing_directions>
					<mixing_directions>Fill glass two-thirds full with cracked ice.</mixing_directions>
					<mixing_directions>Pour in bourbon.</mixing_directions>
					<mixing_directions>Stir briskly.</mixing_directions>
					<mixing_directions>Fill ice-cold champagne.</mixing_directions>
					<mixing_directions>Stir gently.</mixing_directions>
					<mixing_directions>Garnish with a large mint sprig.</mixing_directions>
				</directions><glass>
				<serving_glass>Collins Glass</serving_glass>
				<images>images/collins_glass.jpg</images></glass>
			</group>
			<group category="whiskey">
				<title>Deer Juice</title>
				<ingredients-list>
					<ingredients>1 1/2 oz bourbon</ingredients>
					<ingredients>2 oz. sweet-and sour mix</ingredients>
					<ingredients>2 oz. orange juice</ingredients>
					<ingredients>4 oz. 7-Up</ingredients>
					<ingredients>Several dashes lemon juice</ingredients>
					<ingredients>Dash grenadine</ingredients>
				</ingredients-list>
				<directions>
					<mixing_directions>Mix bourbon, sweet-and-sour mix, and orange juice with cracked ice in a shaker or blender.</mixing_directions>
					<mixing_directions>Pour into a large chilled cooler glass with several ice cubes.</mixing_directions>
					<mixing_directions>Fill with 7-Up.</mixing_directions>
					<mixing_directions>Stir gently.</mixing_directions>
					<mixing_directions>Top with a squeeze of lemon juice and a dash of grenadine.</mixing_directions>
				</directions><glass>
				<serving_glass>Cooler Glass</serving_glass>
				<images>images/cooler_glass.jpg</images></glass>
			</group>
			<group category="whiskey">
				<title>Easterly</title>
